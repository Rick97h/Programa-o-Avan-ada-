include <stdio.h>

int main()
{
  //objetivo:criar um programa que leia 2 valores e caso um valor seja zero peça para digitar novamente e mostre o resultado da divisão dos 2 valores.
  //entrada de dados:
  flutuante x,y,c;
  int d;
  c=x/y;
  //processamento:
  printf("Digite dois valores: ");
  printf("\n");
  printf("\n");
  for(d=0;d<2;d++)
  {
  scanf("%f",&x);
  scanf("%f",&y);
  
  se(x=0)
  {
      printf("Numero inválido, digite um novo numero: ");
      scanf("%f",&x);
  }
  se(y=0)
  {
      printf("Numero inválido, digite um novo numero: ");
      scanf("%f",&y);
  }
  //disse:
  printf("\n");
  printf("o resultado da divisão desses valores é: ");
  printf("%f",c);
  retorna 0;
  }
  //código incompleto,falta ajustes
}
